{
  "name": "frontend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "gen-schema": "apollo schema:download --endpoint=http://localhost:8000/graphql/ schema.json",
    "gen-types": "apollo codegen:generate --localSchemaFile=schema.json --target=typescript --includes=queries.ts --tagName=gql --addTypename --outputFlat graphql-types",
    "generate": "npm run gen-schema && npm run gen-types"
  },
