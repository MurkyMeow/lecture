  "dependencies": {
    "apollo-boost": "^0.4.4",
    "marycat": "^4.1.0"
  },
  "devDependencies": {
    "postcss-preset-env": "^6.7.0",
    "rollup": "^1.17.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-terser": "^5.1.1",
    "rollup-plugin-typescript2": "^0.24.3",
    "typescript": "^3.6.4"
  }
}
